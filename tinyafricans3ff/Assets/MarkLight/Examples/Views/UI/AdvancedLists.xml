<AdvancedLists xmlns="MarkLight">
  <UserInterface>

    <!-- displays a scrollable wrapped list of cards -->
    <Group Orientation="Vertical" ContentAlignment="Left" Spacing="10">
      <Group Orientation="Horizontal" Spacing="15px">
        <Button Text="Add" Click="Add" AdjustToText="Width" TextPadding="20,10,20,10" />
        <Button Text="Remove" Click="Remove" IsDisabled="{=!FlowList.IsItemSelected}" AdjustToText="Width" TextPadding="20,10,20,10" />
        <Button Text="Scroll To" Click="ScrollTo" IsDisabled="{=!FlowList.IsItemSelected}" AdjustToText="Width" TextPadding="20,10,20,10" />
      <Button Text="Scroll To Center" Click="ScrollToCenter" IsDisabled="{=!FlowList.IsItemSelected}" AdjustToText="Width" TextPadding="20,10,20,10" />
      <Button Text="Scroll To Top" Click="ScrollToTop" IsDisabled="{=!FlowList.IsItemSelected}" AdjustToText="Width" TextPadding="20,10,20,10" />
      </Group>

      <List Items="{Cards}" Id="FlowList" Overflow="Wrap" Spacing="5" Orientation="Horizontal" Width="350" Height="200" IsScrollable="True">
        <ListItem IsTemplate="True" Width="100" Height="50">
          <Region Margin="5" BackgroundColor="{#Item.Color}">
            <Label Text="{#Item.Name}" AdjustToText="Width" />
          </Region>
        </ListItem>
      </List>
      <Label Text="{FlowList.SelectedItem.Name}" AdjustToText="Width" />
    </Group>

  </UserInterface>
  <EventSystem />
</AdvancedLists>